page {
  padding: 0;
  margin: 0;
}

.all {
  height: 100vh;
}

.content {
  height: 100%;
}

._content {
  position: relative;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content_img {
  width: 100%;
  margin-top: -30rpx;
  vertical-align: bottom;
  position: relative;
}
.content_img1 {
  width: 100%;

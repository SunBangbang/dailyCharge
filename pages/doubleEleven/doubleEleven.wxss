/* 充值 */

.mask {
  background: #000;
  opacity: 0.5;
  z-index: 99;
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
}

.recharge {
  z-index: 999;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.recharge image:nth-child(1) {
  width: 500rpx;
  height: 700rpx;
  position: relative;
  cursor: pointer;
  transition: all 0.6s;
}

.recharge img:hover {
  transform: scale(1.4);
}

.recharge image:nth-child(2) {
  z-index: 6;
  width: 70rpx;
  position: absolute;
  top: 720rpx;
  left: calc(50% - 35rpx);
}

.recharge_text {
  position: absolute;
  top: 68rpx;
  width: 100%;
  text-align: center;
}

.recharge_text text:nth-child(1) {
  width: inherit;
  display: block;
  white-space: normal;
  color: #fdf135;
  font-size: 36rpx;
}

.recharge_text text:nth-child(2) {
  width: inherit;
  display: block;
  white-space: normal;
  color: #fdf135;
  font-size: 68rpx;
}

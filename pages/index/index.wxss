/**index.wxss**/

.advertise {
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: #fff;
  background: #333;
}

.ad_text {
  position: absolute;
  animation: moving 4s linear infinite;
}

@keyframes moving {
  0% {
    left: 0%;
  }

  100% {
    left: 100%;
  }
}

.all {
  width: 100%;
  height: 100%;
}

.qrTip {
  position: relative;
  font-size: 24rpx;
  color: #fff;
  display: inline-block;
  left: 18%;
  bottom: 315rpx;
  transform: translateX(-50%);
  z-index: 2;
}

/* 头部图片 */

.bg .bg_img {
  width: 100%;
  position: relative;
}

.bg .agreement {
  position: relative;
  bottom: 100rpx;
  font-size: 20rpx;
  color: #fff;
  display: inline-block;
  left: 50%;
  transform: translateX(-50%);
}

.bg .gameLogo {
  position: absolute;
  bottom: -38rpx;
  right: 3%;
  width: 100rpx;
  height: 76rpx;
}

.bg .gameLogo image {
  width: 100%;
}

/* 按钮 */

.center button {
  background: #0da297;
  width: 400rpx;
  height: 72rpx;
  border-radius: 36rpx;
  color: #fff;
  border: 0;
  line-height: 72rpx;
  font-size: 32rpx;
}

.center button:nth-child(1) {
  margin-top: 30rpx;
  margin-bottom: 32rpx;
}

.center button:nth-child(2) {
  margin-bottom: 32rpx;
}

/* 底部 */

.bottom {
  width: 100%;
  font-size: 20rpx;
  display: flex;
  position: fixed;
  bottom: 44rpx;
}

.bottom text {
  color: #0da297;
}

.bottom .btm_left {
  flex: 1;
  text-align: left;
  padding-left: 24rpx;
}

.bottom .btm_right {
  flex: 1;
  text-align: right;
  padding-right: 24rpx;
}

/* 扫码 */

.sweep {
  /* background: red; */
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  position: absolute;
  top: 215rpx;
  left: 228rpx;
  z-index: 3;
  opacity: 0;
}

.sweep button {
  width: 100%;
  height: 100%;
}

/* 遮罩 */

.mask {
  background: #000;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  overflow: hidden;
}

/* 积分 */

.integral {
  position: absolute;
  top: 196rpx;
  left: 95rpx;
  z-index: 6;
}

.integral image:nth-child(1) {
  width: 560rpx;
}

.integral image:nth-child(2) {
  width: 164rpx;
  position: absolute;
  top: 102rpx;
  left: 198rpx;
}

.integral .integral_ {
  width: 560rpx;
  position: absolute;
  top: 381rpx;
  font-size: 40rpx;
  color: #22BF94;
  text-align: center;
}

.integral .number {
  font-size: 120rpx;
  color: #FFFFFF;
  width: 560rpx;
  /* height: 164rpx; */
  line-height: 164rpx;
  text-align: center;
  position: absolute;
  top: 109rpx;
}



.integral .number text:nth-child(1) {
  /* position: absolute; */
  display: inline-block;
  font-size: 80rpx;
  /* margin-bottom: 80rpx; */
}

.integral .number text:nth-child(2) {
  font-size: 32rpx;
}

.shoppongMall {
  display: inline-block;
  color: #06c;
  text-decoration: underline;
}




.exchange {
  font-size: 18rpx;
  color: #666;
  position: absolute;
  bottom: 214rpx;
  text-align: center;
  width: 560rpx;
}

.rela {
  position: relative;
}
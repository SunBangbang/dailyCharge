/*提货方式*/

.title_top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
  font-size: 28rpx;
  color: #0da297;
  padding: 0 20rpx;
}

.title_top>view {
  text-align: center;
}

.title_top>view:nth-child(1) {
  /*margin-right: 50rpx;*/
}

.title_top>view checkbox {
  margin-left: 13rpx;
}

.title_top>view checkbox .wx-checkbox-input {
  width: 24rpx;
  height: 24rpx;
}

.title_top>view checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: left;
  font-size: 30rpx;
}

.title_1 {
  color: #fc8383;
}

.title_2 {
  color: #fc8383;
  flex-grow: 1;
}

.title_3 {
  color: #333;
}

/* 未填写 */

.dexchange_top {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}

.dexchange_top>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #0da297;
  font-size: 28rpx;
  font-weight: 400;
}

.dexchange_top image {
  width: 44rpx;
  height: 44rpx;
}

/* 已填写 */

.dexchange_top1 {
  padding: 26rpx 24rpx;
}

.address {
  display: flex;
  background: #fff;
}

.address view:nth-child(1) {
  flex: 1;
  color: #333;
  font-size: 32rpx;
}

.address view:nth-child(2) {
  flex: 2;
  text-align: left;
  color: #333;
  font-size: 32rpx;
}

.address view:nth-child(3) {
  flex: 1;
  text-align: right;
}

.address image {
  width: 44rpx;
}

.address_ {
  font-size: 20rpx;
  color: #333;
}

.default {
  background: #ff2d55;
  color: #fff;
  border-radius: 12rpx;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  display: inline-block;
  width: 56rpx;
}

.label {
  background: #00a3f0;
  color: #fff;
  border-radius: 12rpx;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  display: inline-block;
  width: 56rpx;
  margin: 0 8rpx;
}

/* 占位 */

.box {
  background: #f4f4f4;
  height: 8rpx;
}

/* 中间 */

.dexchange_ct {
  width: 100%;
  height: 100%;
  border-bottom: 8rpx solid #f4f4f4;
  position: relative;
}

.content {
  display: flex;
  margin: 0 24rpx;
  height: 200rpx;
}

.content image {
  width: 160rpx;
  height: 160rpx;
}

.content .img {
  flex: 1;
  padding: 20rpx 0;
}

.content .written {
  flex: 3;
  font-size: 22rpx;
  color: #333;
  padding: 26rpx 0 26rpx 24rpx;
}

.written .color {
  color: #666;
  font-size: 20rpx;
  margin-top: 26rpx;
}

.content .money {
  flex: 1;
  padding: 26rpx 0;
  color: #fd0303;
  font-size: 30rpx;
  text-align: right;
}

.money .color {
  color: #666;
  font-size: 20rpx;
  margin-top: 50rpx;
}

/*按钮*/

.btn {
  display: flex;
  position: fixed;
  line-height: 98rpx;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  border-top: 2rpx solid #e5e5e5;
}

.btn view:nth-child(1) {
  flex: 1;
  width: 0;
  color: #ff0303;
  font-size: 32rpx;
}

.choice_sure1 {
  width: 100%;
  background-color: #0da297;
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
  border-radius: 0;
}

button::after {
  border: none;
}

.option_tips {
  position: absolute;
  color: #ff0303;
  text-align: center;
  width: 100%;
  font-size: 20rpx;
  top: 152rpx;
  right: 20rpx;
}

.all_map {
  width: 100%;
  text-align: center;
  margin-top: 88rpx;
}

.map {
  width: 100%;
  font-size: 22rpx;
  line-height: 44rpx;
}


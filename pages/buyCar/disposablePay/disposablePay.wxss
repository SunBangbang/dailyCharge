.all {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #fff;
  font-size: 34rpx;
  display: inline-block;
  height: 28rpx;
  line-height: 24rpx;
  border: 4rpx solid #ffe734;
  border-top: none;
  border-bottom: none;
  padding: 0 20rpx;
  font-weight: bold;
  margin-top: 90rpx;
}


.content {
  color: #fff;
  line-height: 72rpx;
  font-size: 24rpx;
  width: 100%;
  margin-top: 49rpx;
}

.content button, .content view {
  margin: 0 65rpx;
  margin-top: 45rpx;
  height: 88rpx;
  line-height: 84rpx;
  background: none;
  border: 1px solid #fff;
  border-radius: 0;
  color: #fff;
  font-size: 32rpx;
  padding: 0 31rpx;
}

.content view {
  display: flex;
}

.content text {
  color: #fff;
  height: 100%;
  display: inline-block;
}

.content input {
  flex-grow: 1;
  width: 0rpx;
  color: #fff;
  height: 100%;
  display: inline-block;
}

.content button.check {
  background-color: #fd7660;
}

.content button::after {
  border: none;
}

.content button.next {
  background-color: rgba(255, 255, 255, 0.3);
  border: none;
  margin-top: 70rpx;
  color: #fff;
}

.map {
  margin-top: 48rpx;
  color: #fff;
  text-align: center;
  font-size: 22rpx;
  line-height: 44rpx;
  font-weight: 300;
}
.all_map{
  margin-top: 44rpx;
}

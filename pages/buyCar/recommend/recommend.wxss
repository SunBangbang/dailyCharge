page{
  background-size: 100% auto;
}

.all{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title{
  color: #FFFFFF;
  font-size: 32rpx;
  margin-top: 99rpx;
}

.content{
  width: 100%;
  height: 0;
  flex-grow: 1;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr{
  width: 401rpx;
  height: 401rpx;
  background: #FFFFFF;
  margin-top: -200rpx;
  box-shadow:0 0 8px rgba(0, 0, 0, 0.3);
  padding: 15rpx;
}

.qr image{
  width: 100%;
  height: 100rpx;
}

.content_tip{
  font-size: 22rpx;
  color: #333333;
  margin-top: 30rpx;
}

.content_recommend{
  margin-top: 146rpx;
}

.content_button{
  width: 520rpx;
  height: 80rpx;
  background-color:rgb(235,81,29);
  color: #FFFFFF;
  line-height: 78rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
}

button::after{
  border: none;
}

.content_explain{
  margin-top: 79rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.explain_title{
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
}

.explain_title view{
  width: 99rpx;
  height: 1rpx;
  background-color: #666666;
  margin: 0 8rpx;
}

.explain_list{
  margin-top: 20rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  color: #666666;
}

.explain_list text{
  display: block;
}
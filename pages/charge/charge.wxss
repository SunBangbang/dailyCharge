/* 新表格 */
.tr {
  border: 2rpx solid #333333;
  border-radius: 16rpx;
}

.tr .tr_power {
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  background: #333333;
  color: #fff;
  padding: 12rpx 24rpx;
}

.tr .tr_consumption {
  padding: 17rpx 24rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #333;
}
.tr .tr_discount{
  padding: 17rpx 24rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #ff0000;
}
.tr .tr_pay{
  padding: 17rpx 24rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #333;
}
.tr #remarks{
  color: #ff0000;
  font-size: 20rpx;
}
.tr #all{
  color: #0da297;
  font-size: 40rpx;
}
.tr #all text{
  color: #0da297;
  font-size: 24rpx;
}

.tr .td {
  display: flex;
}

.tr .td text {
  flex: 1;
}

.tr .td text:nth-child(2) {
  text-align: right;
  color: #000;
  font-weight: 500;
}
.tr .br{
  border-bottom:2rpx solid #333333 ;
  margin: 0 24rpx;
}

.item_arrow {
  transition: 0.2s;
  width: 18rpx;
  height: 18rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 24rpx;
  top: 28rpx;
  line-height: 88rpx;
  transform: rotate(135deg);
}

.item_arrow_down {
  transition: 0.2s;
  top: 40rpx;
  transform: rotate(-45deg);
}

.item_consume {
  top: 88rpx;
  left: 25rpx;
}

.item_tip {
  float: right;
  text-align: right;
  line-height: 32rpx;
  width: 60%;
}

.cb {
  clear: both;
}

.notMore {
  padding: 20rpx 0;
  font-size: 22rpx;
  text-align: center;
  color: #999;
}
page {
  background: #f4f4f4;
}

::-webkit-scrollbar {
  display: none;
}

.top {
  height: 96rpx;
  background: #fff;
  position: relative;
}

.top_text {
  display: inline-block;
  font-size: 46rpx;
  line-height: 96rpx;
  margin-left: 26rpx;
  position: relative;
}

.top_arrow {
  position: absolute;
  right: -30rpx;
  top: 32rpx;
  width: 18rpx;
  height: 18rpx;
  border-top: 2px solid #000;
  border-right: 2px solid #000;
  transform: rotate(135deg);
}

.top_button {
  position: absolute;
  border-radius: 22rpx;
  background: #333;
  font-size: 26rpx;
  width: 96rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  color: #fff;
  top: 26rpx;
  right: 24rpx;
}

.content {
  position: fixed;
  bottom: 0;
  top: 109rpx;
}

.record_item {
  transition: 0.2s;
  overflow: hidden;
  position: relative;
  height: 88rpx;
  font-size: 20rpx;
  padding: 0 25rpx;
  background: #fff;
  color: #999;
  max-height: 88rpx;
  margin-bottom: 4rpx;
}

.record_item_show {
  transition: 0.2s;
  padding-bottom: 20rpx;
  height: auto;
  max-height: 532rpx;
  overflow: visible;
}

.item_date {
  font-size: 22rpx;
  line-height: 88rpx;
  left: 25rpx;
  color: #333;
}

.item_des {
  font-size: 32rpx;
  line-height: 88rpx;
  float: right;
  margin-right: 64rpx;
  color: #0da297;
}

.item_des1 {
  font-size: 32rpx;
  line-height: 88rpx;
  float: right;
  margin-right: 64rpx;
  color: #fd4e57;
}


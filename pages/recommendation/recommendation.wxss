page {
  background: #fff;
}

.all {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top {
  position: relative;
  height: 300rpx;
  width: 100%;
  background: url("https://api.cd1a.cn/imges/integralbg.png");
  background-size: 100% 100%;
  overflow: hidden;
}

.top_title {
  position: absolute;
  font-size: 52rpx;
  color: #fff;
  line-height: 100rpx;
  top: 30rpx;
  width: 100%;
  text-align: center;
}

.top_tip {
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  line-height: 24rpx;
  top: 130rpx;
  width: 100%;
  text-align: center;
  font-weight: 300;
}

.record {
  width: calc(100% - 48rpx);
  background: #fff;
  height: 200rpx;
  border-radius: 12rpx;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
  margin-top: -100rpx;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
}

.record>view {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.record .record_center_line {
  flex: none;
  width: 2rpx;
  background-color: #efefef;
  height: 128rpx;
}

.record view view.record_item_title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.record view view.record_item_val {
  font-size: 60rpx;
  color: #333;
  font-weight: bold;
}

.record view view.record_item_val text {
  font-size: 20rpx;
  color: #333;
  font-weight: initial;
  margin-left: 5rpx;
}

.content {
  width: calc(100% - 60rpx);
  flex-grow: 1;
  height: 0rpx;
  margin: 30rpx 0;
}

.recomm_list {
  height: 100%;
}

.recomm_item {
  width: 100%;
  height: 112rpx;
  border-bottom: 2rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* .recomm_item:nth-child(1){
  border: none;
} */

.recomm_item:nth-child(1) .item_no {
  background: url("https://api.cd1a.cn/imges/one.png");
  background-size: 100% 100%;
}

.recomm_item:nth-child(1) .item_icon image {
  border-color: #fed839;
}

.recomm_item:nth-child(2) .item_no {
  background: url("https://api.cd1a.cn/imges/two.png");
  background-size: 100% 100%;
}

.recomm_item:nth-child(2) .item_icon image {
  border-color: #c4d9df;
}

.recomm_item:nth-child(3) .item_no {
  background: url("https://api.cd1a.cn/imges/three1.png");
  background-size: 100% 100%;
}

.recomm_item:nth-child(3) .item_icon image {
  border-color: #e3b15c;
}

.item_no {
  font-size: 28rpx;
  color: #999;
  margin: 0 9rpx;
  height: 80rpx;
  width: 40rpx;
  line-height: 80rpx;
  text-align: center;
}

.item_icon {
  width: 76rpx;
  height: 76rpx;
  margin: 0 5rpx;
}

.item_icon image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  border: 2rpx solid #999;
}

.item_name {
  margin-left: 13rpx;
  color: #666;
  font-size: 28rpx;
}

.item_integral {
  font-size: 38rpx;
  color: #0da297;
  margin-right: 5rpx;
  flex-grow: 1;
  text-align: right;
}

.bottom {
  height: 132rpx;
  line-height: 132rpx;
  width: 100%;
}

.invitation {
  width: 520rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #0da297;
  margin-top: 30rpx;
  color: #fff;
  line-height: 72rpx;
  font-size: 32rpx;
}
button::after {
  border: none;
}

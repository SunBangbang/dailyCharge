/* 未填写 */

.dexchange_top {
  display: flex;
  padding: 0 24rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}

.dexchange_top view:nth-child(1) {
  flex: 3;
  color: #0da297;
  font-size: 28rpx;
  font-weight: 400;
}

.dexchange_top view:nth-child(2) {
  flex: 1;
  text-align: right;
}

.dexchange_top image {
  width: 44rpx;
  margin-top: 22rpx;
}

/* 已填写 */

.dexchange_top1 {
  padding: 26rpx 24rpx;
}

.address {
  display: flex;
  background: #fff;
}

.address view:nth-child(1) {
  flex: 1;
  color: #333;
  font-size: 32rpx;
}

.address view:nth-child(2) {
  flex: 2;
  text-align: left;
  color: #333;
  font-size: 32rpx;
}

.address view:nth-child(3) {
  flex: 1;
  text-align: right;
}

.address image {
  width: 44rpx;
}

.address_ {
  font-size: 20rpx;
  color: #333;
}

.default {
  background: #ff2d55;
  color: #fff;
  border-radius: 12rpx;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  display: inline-block;
  width: 56rpx;
}

.label {
  background: #00a3f0;
  color: #fff;
  border-radius: 12rpx;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  display: inline-block;
  width: 56rpx;
  margin:0 8rpx;
}

/* 占位 */

.box {
  background: #f4f4f4;
  height: 8rpx;
}

/* 中间 */

.dexchange_ct {
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  margin: 0 24rpx;
  height: 200rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.content image {
  width: 160rpx;
  height: 160rpx !important;
}

.content .img {
  flex: 1;
  padding: 20rpx 0;
}

.content .written {
  flex: 3;
  font-size: 22rpx;
  color: #333;
  padding: 26rpx 0 26rpx 24rpx;
}

.written .color {
  color: #666;
  font-size: 20rpx;
  margin-top: 26rpx;
}

.content .money {
  flex: 1;
  padding: 26rpx 0;
  color: #fd0303;
  font-size: 30rpx;
  text-align: right;
}

.money .color {
  color: #666;
  font-size: 20rpx;
  margin-top: 50rpx;
}

/* 按钮 */

.bottom {
  margin-top: 192rpx;
}

.bottom button {
  height: 72rpx;
  width: 520rpx;
  line-height: 72rpx;
  background: #0da297;
  color: #fff;
  font-size: 32rpx;
  border-radius: 36rpx;
  font-weight: 200;
}

button::after {
  border: none;
}

.address_tip {
  vertical-align: middle;
  display: inline-block;
  color: #fff;
  font-size: 20rpx;
  height: 24rpx;
  width: 60rpx;
  line-height: 24rpx;
  background-color: #00a3f0;
  border-radius: 12rpx;
  text-align: center;
  margin-left: 10rpx;
}

.address_text{
  margin-left: 10rpx;
}
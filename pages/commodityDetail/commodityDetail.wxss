page {
  background-color: #fff;
}

.all {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.all_con {
  height: 100%;
}

.comm_img {
  width: 100%;
  background: #000;
}

.comm_img swiper {
  height: 750rpx;
}

.comm_img image {
  width: 100%;
  height: 100%;
}

.comm_price {
  width: 100%;
  background-color: #fff;
}

.price_unit {
  font-size: 32rpx;
  color: #ff0303;
}

.price_number {
  font-size: 52rpx;
  line-height: 52rpx;
  color: #ff0303;
}

.price_number text {
  font-size: 26rpx;
  color: #333;
}

.price {
  padding: 24rpx;
  padding-bottom: 20rpx;
}

.comm_title {
  padding: 24rpx;
  padding-top: 0;
  font-size: 28rpx;
  color: #333;
  line-height: 28rpx;
  font-weight: bolder;
}

.comm_button {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #0da297;
  color: #fff;
  border-radius: 0;
  line-height: 98rpx;
  font-size: 32rpx;
}

.comm_option {
  flex: 1;
  flex-grow: 1;
  background-color: #fff;
  width: 100%;
}

.option_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  position: relative;
  margin: 0 26rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.option_name {
  color: #666;
  font-size: 20rpx;
  margin-right: 19rpx;
}

.option_value {
  flex: 1;
  color: #333;
  font-size: 20rpx;
}

.option_choice image {
  width: 32rpx;
}

.choice_comm_mask {
  background-color: #000;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.choice_comm_mask_hide {
  transition: 0.4s;
  opacity: 0.0;
  z-index: -1;
}

.choice_comm_mask_show {
  transition: 0.4s;
  opacity: 0.6;
  z-index: 8;
}

.choice_comm {
  z-index: 9;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 60vh;
  background-color: #fff;
  padding: 0 24rpx;
}

.choice_comm_show {
  transition: 0.4s;
  margin-bottom: 0;
}

.choice_comm_hide {
  transition: 0.4s;
  margin-bottom: -80vh;
}

.choice_img {
  width: 230rpx;
  height: 230rpx;
  border: 2rpx solid #dedede;
  border-radius: 16rpx;
  position: absolute;
  top: -60rpx;
  left: 24rpx;
  background-color: #fff;
}

.choice_img image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.choice_price {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  border-bottom: 1rpx solid #efefef;
  padding-left: 254rpx;
}

.price_color {
  color: #333;
  font-size: 22rpx;
}

.choice_price .price {
  padding: 0;
  margin-bottom: 10rpx;
}

.choice_option {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  border-bottom: 1rpx solid #efefef;
  width: 100%;
}

.choice_option_name {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  margin-left: 2rpx;
}

.choice_option_list {
  margin-bottom: 20rpx;
  height: 175rpx;
  width: 100%;
}

.choice_option_list_scroll {
  height: 100%;
  width: 100%;
}

.choice_option_button {
  display: inline-block;
  height: 44rpx;
  color: #666;
  font-size: 26rpx;
  line-height: 44rpx;
  background-color: #fff;
  border: 1rpx solid #0da297;
  padding: 0 22rpx;
  border-radius: 22rpx;
  margin-right: 18rpx;
  max-width: calc(100% - 48rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.choice_option_list .selected {
  background-color: #0da297;
  color: #fff;
}

.choice_num {
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.choice_num_name {
  color: #333;
  font-size: 30rpx;
  margin-left: 2rpx;
  flex-grow: 1;
}

.choice_num_choice {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: right;
}

.choice_num_num {
  width: 100rpx;
  display: inline-block;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: center;
}

.choice_num_choice button {
  height: 66rpx;
  width: 80rpx;
  background-color: #f2f2f2;
  border-radius: 4rpx;
}

.choice_num_choice button view {
  width: 32rpx;
  height: 32rpx;
  transition: color 0.25s;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.choice_num_choice button view::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  border-top: 5rpx solid #999;
}

.choice_num_add view::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  height: 100%;
  border-left: 5rpx solid #999;
}

.choice_sure {
  position: absolute;
  bottom: 26rpx;
  left: 24rpx;
  right: 24rpx;
  border-radius: 36rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #0da297;
  color: #fff;
  font-size: 32rpx;
}

.choice_sure_ {
  position: absolute;
  bottom: 26rpx;
  left: 24rpx;
  right: 24rpx;
  border-radius: 36rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #999;
  color: #fff;
  font-size: 32rpx;
}

button::after {
  border: none;
}

.zero_img image {
  width: 100%;
  margin-bottom: -10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.showDetail {
  transition: 0.4s;
  padding-top: 0;
  margin-bottom: 90rpx;

}

.hideDetail {
  transition: 0.4s;
  padding-top: 50%;
}

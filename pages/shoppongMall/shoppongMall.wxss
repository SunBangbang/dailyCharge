page {
  background: #f4f4f4;
}

.u {
  transition: 0.5s;
  position: fixed;
  width: 100%;
  top: 0rpx;
  bottom: 0rpx;
}

.l {
  transition: 0.5s;
  top: -530rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top {
  position: relative;
  height: 320rpx;
  width: 100%;
  background: url("https://api.cd1a.cn/imges/integralbg.png");
  background-size: 100% 100%;
  overflow: hidden;
}

.top_button {
  position: absolute;
  border-radius: 18rpx;
  font-size: 20rpx;
  border: 1rpx solid #fff;
  height: 36rpx;
  width: 100rpx;
  text-align: center;
  line-height: 34rpx;
  color: #fff;
  top: 24rpx;
  left: 24rpx;
}

.top_button_ {
  position: absolute;
  border-radius: 18rpx;
  font-size: 20rpx;
  border: 1rpx solid #fff;
  height: 36rpx;
  width: 142rpx;
  text-align: center;
  line-height: 36rpx;
  color: #fff;
  top: 24rpx;
  right: 24rpx;
}

.top_num {
  position: absolute;
  font-size: 100rpx;
  color: #fff;
  line-height: 100rpx;
  top: 50%;
  margin-top: -56rpx;
  width: 100%;
  text-align: center;
}

.top_tip {
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  line-height: 24rpx;
  top: 50%;
  margin-top: 66rpx;
  width: 100%;
  text-align: center;
}

.adv {
  position: relative;
}

.adv_img {
  width: 100%;
}

.content {
  transition: 0.5s;
  background: #f4f4f4;
  position: fixed;
  left: 0;
  right: 0;
  top: 530rpx;
  bottom: 0;
}

.ll {
  transition: 0.5s;
  top: 0;
}

.content_nav {
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}

.content_nav_line {
  width: 2rpx;
  height: 60%;
  background: #efefef;
}

.content_nav_1, .content_nav_2 {
  flex: 1 0 0;
  height: 100%;
  text-align: center;
}

.content_nav_1 view, .content_nav_2 view {
  font-size: 24rpx;
  line-height: 80rpx;
  display: inline-block;
  border-top: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
}

.content_nav_1 view.nav_check, .content_nav_2 view.nav_check {
  border-bottom: 4rpx solid #0da297;
  color: #0da297;
}

.content_goods {
  transition: 0.5s;
  padding: 12rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 88rpx;
  bottom: 0;
}

.goods {
  height: 100%;
}

.goods_item {
  display: block;
  float: left;
  width: 50%;
}

.goods_item_content {
  background: #fff;
  margin: 12rpx;
  border-radius: 16rpx;
}

.goods_item_img {
  height: 340rpx;
  background: #b5b5b5;
  border-radius: 16rpx 16rpx 0 0;
}

.goods_item_img image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.goods_item_introduce {
  padding: 14rpx;
  font-size: 22rpx;
  color: #333;
}

.goods_item_introduce text {
  display: block;
}

.goods_item_introduce text.goods_synopsis {
  color: #999;
  font-size: 16rpx;
  height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.goods_item_introduce text.goods_grade {
  display: block;
  text-align: right;
  color: #999;
}

.goods_item_introduce text.goods_grade_num {
  display: inline-block;
  font-size: 38rpx;
  color: #ff0303;
}

/* 明细 */

.content_goods1 {
  transition: 0.5s;
  padding: 4rpx 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 88rpx;
  bottom: 0;
}

.content_goods_ {
  background: #fff;
  height: 90rpx;
  line-height: 88rpx;
}

.detailed {
  display: flex;
  border-bottom: 2rpx solid #efefef;
  margin: 0 24rpx;
}

.content_goods_ view {
  flex: 1;
}

.content_goods_ view:nth-child(1) {
  color: #333;
  font-size: 22rpx;
}

.content_goods_ view:nth-child(2) {
  color: #333;
  font-size: 22rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content_goods_ .num {
  color: #0da297;
  font-size: 36rpx;
  text-align: right;
}

.content_goods_ .num_ {
  color: #fd4e57;
  font-size: 36rpx;
  text-align: right;
}

.cb {
  clear: both;
}

.left100 {
  transition: 0.5s;
  left: 100%;
  right: -100%;
}

.right100 {
  transition: 0.5s;
  right: 100%;
  left: -100%;
}

.notMoer1 {
  font-size: 22rpx;
  color: #999;
  line-height: 50rpx;
  text-align: center;
}

.notMoer2 {
  font-size: 22rpx;
  color: #999;
  background-color: #fff;
  line-height: 50rpx;
  text-align: center;
}

.goods_con:after {
  clear: both;
  display: block;
  content: "";
  visibility: hidden;
  height: 0;
}

.goods_con {
  zoom: 1;
}
.logistics{
  text-align: right;
}
.logistics text{
  display: inline-block;
  width: 100rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 2rpx solid #fd4e57;
  color: #fd4e57;
  border-radius: 18rpx;
  text-align: center;
}

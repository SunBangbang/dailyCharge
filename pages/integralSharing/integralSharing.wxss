


.all {
  padding: 0;
  margin: 0;
}

.all .share_bg {
  width: 100%;
  vertical-align: bottom;
}

.content {
  width: 100%;
}

.share_QR {
  margin: 0 auto;
  margin-top: 52rpx;
  width: 341rpx;
  height: 341rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
  padding: 30rpx;
}

.share_QR image {
  width: 100%;
  height: 100%;
}

.qr_tip{
  color: #333333;
  font-size: 22rpx;
  text-align: center;
  display: block;
}

.share_btn {
  margin: 0 auto;
  margin-top: 79rpx;
  position: relative;
  font-size: 32rpx;
  height: 100rpx;
}

.share_btn button {
  position: absolute;
  border-radius: 8rpx;
  background-color: #f6664f;
  color: #FFFFFF;
  width: 520rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  left: 50%;
  transform: translateX(-50%)
}

.share_btn button.bl {
  font-size: 33rpx;
  transition: 0.5s;
  line-height: 100rpx;
  height: 100rpx;
  width: 600rpx;
  margin-top: -5rpx;
}

.share_btn button::after {
  border: none;
}

.invitation {
  margin-top: 60rpx;
  text-align: center;
}

.invitation_title {
  font-size: 34rpx;
  color: #000000;
  display: inline-block;
  border-left: 4rpx solid #f6664f;
  border-right: 4rpx solid #f6664f;
  padding: 0 16rpx;
  font-weight: bolder;
  line-height: 32rpx;
}

.invitation_method {
  text-align: left;
  padding: 0 24rpx;
  margin-top: 10rpx;
}

.method_index {
  font-size: 24rpx;
  background: #f6664f;
  color: #FFF;
  display: inline-block;
  border-radius: 16rpx;
  padding: 0 12rpx;
  height: 33rpx;
  line-height: 32rpx;
  margin-bottom: 10rpx;
}

.method_text {
  font-size: 22rpx;
  color: #333;
  line-height: 46rpx;
}

.rule {
  margin-top: 60rpx;
  text-align: center; 
  padding-bottom: 216rpx;
}

.rule_title {
  font-size: 34rpx;
  color: #000000;
  font-weight: bolder;
  display: inline-block;
  border-left: 4rpx solid #f6664f;
  border-right: 4rpx solid #f6664f;
  padding: 0 16rpx;
  line-height: 32rpx;
}

.rule_method {
  text-align: left;
  padding: 0 24rpx;
  font-size: 22rpx;
  color: #333;
  line-height: 32rpx;
  margin-top:32rpx;
}
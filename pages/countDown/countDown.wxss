.all{
  padding: 0;
}

.slide-head,
.slide-bottom {
  height: 160rpx;
}

.content {
  position: relative;
  height: 160rpx;
  width: 100%;
  margin-top: 60rpx;
}

.slide-bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.progress_box{
  position: relative;
  width:480rpx;
  height: 480rpx;  
  margin: 100rpx auto 50rpx auto;
}
.progress_bg{
  position: absolute;
  width:100%;
  height: 100%;
}
.progress_canvas{ 
  position: absolute;
  width:100%;
  height: 100%; 
} 
.progress_text{ 
  position: absolute; 
  font-size:28rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.progress_text text{
  display: block;
  text-align: center;
  padding: 20rpx;
}
.progress_info{   
  font-size: 80rpx;
} 
.progress_dot{
  width:16rpx;
  height: 16rpx;  
  border-radius: 50%;
  background-color: #fb9126;
}

.message{
  display: flex;  
  align-items: center;
  justify-content: center;
}

.message_image{
  width: 46rpx;
}

.message_text{
  color: #333333;
  font-size: 24rpx;
}

.buttons button{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #0da297;
  color: #0da297;
  font-size: 28rpx;
  background: #FFF;
}

.deviec_repair{
  margin-top: 40rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 8rpx;
} 
.modal-content {
  padding: 50rpx 0rpx;
  text-align: center;
  color: #666
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 32rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
   background:#a53533;
  color: white;
  text-align: center;
} 





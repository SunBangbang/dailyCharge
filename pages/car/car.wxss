/* pages/car/car.wxss */page {
  background: #f4f4f4;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.top {
  height: 320rpx;
  width: 100%;
}

.content {
  transition: 0.5s;
  background: #f4f4f4;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.ll {
  transition: 0.5s;
  top: 0;
}

.content_nav {
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
}

.content_nav_line {
  width: 2rpx;
  height: 60%;
  background: #efefef;
}

.content_nav_1, .content_nav_2 {
  flex: 1 0 0;
  height: 100%;
  text-align: center;
}

.content_nav_1 view, .content_nav_2 view {
  font-size: 24rpx;
  line-height: 80rpx;
  display: inline-block;
  border-top: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
}

.content_nav_1 view.nav_check, .content_nav_2 view.nav_check {
  border-bottom: 4rpx solid #0da297;
  color: #0da297;
}

.content_goods {
  transition: 0.5s;
  padding: 12rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 88rpx;
  bottom: 0;
}

.goods {
  height: 100%;
}

.goods_item {
  display: block;
  float: left;
  width: 50%;
}

.goods_item_content {
  background: #fff;
  margin: 12rpx;
  border-radius: 16rpx;
}

.goods_item_img {
  height: 340rpx;
  background: #b5b5b5;
  border-radius: 16rpx 16rpx 0 0;
}

.goods_item_img image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.goods_item_introduce {
  padding: 14rpx;
  font-size: 22rpx;
  color: #333;
}

.goods_item_introduce text {
  display: block;
}

.goods_item_introduce text.goods_synopsis {
  color: #999;
  font-size: 16rpx;
  height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.goods_item_introduce text.goods_grade {
  display: block;
  text-align: right;
  color: #999;
}

.goods_item_introduce text.goods_grade_num {
  display: inline-block;
  font-size: 38rpx;
  color: #ff0303;
}

/* 明细 */

.content_goods1 {
  transition: 0.5s;
  padding: 4rpx 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 88rpx;
  bottom: 0;
}

.content_goods_ {
  background: #fff;
}

.detailed {
  display: flex;
  margin: 0 auto 5px auto;
  padding: 10px 10px;
}

.car_img {
  width: 145px;
  height: 120px;
  margin-right: 10px;
}

.right_details {
  display: flex;
  flex-direction: column;
  position: relative;
}

.car_right {
  margin-bottom: 5px;
  font-size: 12px;
  display: flex;
  align-items: center;
  color: #666666;
}

.finshed {
  font-size: 13px;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 75px;
  height: 25px;
  border-radius: 999px;
  border: 1px solid #333333;
  letter-spacing: 1px;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progres {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 75px;
  height: 25px;
  border-radius: 999px;
  font-size: 13px;
  border: 1px solid #0DA297;
  letter-spacing: 1px;
  color: #0DA297;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress {
  position: absolute;
  bottom: 0px;
  left: 90px;
  width: 75px;
  height: 25px;
  border-radius: 999px;
  font-size: 13px;
  border: 1px solid #0DA297;
  letter-spacing: 1px;
  color: #0DA297;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cb {
  clear: both;
}

.left100 {
  transition: 0.5s;
  left: 100%;
  right: -100%;
}

.right100 {
  transition: 0.5s;
  right: 100%;
  left: -100%;
}

.notMoer1 {
  font-size: 22rpx;
  color: #999;
  line-height: 50rpx;
  text-align: center;
}

.notMoer2 {
  font-size: 22rpx;
  color: #999;
  background-color: #fff;
  line-height: 50rpx;
  text-align: center;
}

.goods_con:after {
  clear: both;
  display: block;
  content: "";
  visibility: hidden;
  height: 0;
}

.goods_con {
  zoom: 1;
}

.mask {
  position: fixed;
  background: #000;
  opacity: .5;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
}

.detail_box {
  background: #fff;
  width: 75%;
  height: 400px;
  position: fixed;
  left: calc((100% - 75%) /2);
  top: calc((100% - 400px) / 2);
  z-index: 4;
  border-radius: 15px;
}

.progress_content {
  width: 100%;
  padding: 30px 0;
  display: flex;
}

.left {
  padding: 2.5%;
}

.circle_ {
  line-height: 25px;
  width: 25px;
  height: 25px;
  background: #000;
  border-radius: 50%;
  color: #fff;
  font-weight: 600;
  font-size: 20px;
  text-align: center;
  margin: 0 10px 50px 10px;
}

.detail_box > button {
  background: #000;
  color: #fff;
  letter-spacing: 1px;
  width: 80%;
  margin: 20px auto;
  border-radius: 999px;
  height: 40px;
  line-height: 40px;
}

.center {
  border-left: 1px solid #999999;
  height: 250px;
  margin: 0 10px 0 10px;
}

.c1,
.c2,
.c3 {
  width: 5px;
  height: 5px;
  border-radius: 50%;
  background: #000;
}

.father {
  padding: 3px;
  border-radius: 50%;
  border: 1px solid #000;
}

.a1 {
  position: absolute;
  top: 44px;
  left: 64px;
}
.a2 {
  position: absolute;
  top: 122px;
  left: 64px;
}
.a3 {
  position: absolute;
  top: 197px;
  left: 64px;
}

.first {
  margin: 10px 0 35px 0;
}

.time {
  color: #999999;
  font-size: 14px;
  margin: 10px 0 10px 10px;
}

.location {
  font-size: 12px; 
  margin: 0 0 18px 8px;
}